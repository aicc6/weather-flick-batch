# WeatherFlick 배치 시스템 환경 변수 설정

# =============================================================================
# 기본 환경 설정
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# API 키 설정
# =============================================================================

# 한국관광공사 API (https://data.go.kr/)
KTO_API_KEY=your_kto_api_key_here
KTO_API_BASE_URL=http://apis.data.go.kr/B551011/KorService1

# 기상청 API (https://data.go.kr/)
KMA_API_KEY=your_kma_api_key_here

# OpenWeatherMap API
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_BASE_URL=http://api.openweathermap.org/data/2.5

# =============================================================================
# 데이터베이스 설정 (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_USER=weather_user
DB_PASSWORD=weather_password
DB_NAME=weather_travel_db
DB_PORT=5432

# 연결 풀 설정
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10

# =============================================================================
# Redis 설정
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# 배치 스케줄 설정
# =============================================================================

# 날씨 데이터 수집 (매시간)
WEATHER_DATA_TIME=02:00

# 관광지 데이터 동기화 (매주 일요일)
TOURIST_DATA_TIME=03:00
TOURIST_DATA_DAY=sunday

# 추천 점수 계산 (매일)
SCORE_CALCULATION_TIME=04:00

# 데이터 품질 검사 (매일)
DATA_QUALITY_TIME=06:00

# 데이터베이스 백업 (매일)
DATABASE_BACKUP_TIME=02:00

# =============================================================================
# API 연결 설정
# =============================================================================
API_TIMEOUT=30
API_RETRY_COUNT=3
TOURISM_API_TIMEOUT=30
TOURISM_API_RETRY_COUNT=3

# =============================================================================
# 로깅 설정
# =============================================================================
LOG_FILE_PREFIX=weather_flick_batch
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# 로그 디렉토리
LOG_DIR=logs

# =============================================================================
# 알림 설정
# =============================================================================

# Slack 알림
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# 이메일 알림
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
ALERT_EMAILS=admin@company.com,ops@company.com

# =============================================================================
# AWS 설정
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
S3_BUCKET=weatherflick-backups

# =============================================================================
# 모니터링 설정
# =============================================================================

# 시스템 리소스 임계값
DISK_USAGE_THRESHOLD=80.0
MEMORY_USAGE_THRESHOLD=85.0
CPU_USAGE_THRESHOLD=90.0

# 헬스체크 간격 (초)
HEALTH_CHECK_INTERVAL=300

# 성능 체크 간격 (초)
PERFORMANCE_CHECK_INTERVAL=600

# 알림 활성화
ALERT_ENABLED=true

# =============================================================================
# 데이터 보관 설정
# =============================================================================

# 백업 파일 보관 기간 (일)
BACKUP_RETENTION_DAYS=30

# 로그 파일 보관 기간 (일)
LOG_RETENTION_DAYS=7

# 과거 날씨 데이터 보관 기간 (년)
WEATHER_DATA_RETENTION_YEARS=2

# =============================================================================
# 보안 설정
# =============================================================================

# API 키 암호화
ENCRYPTION_KEY=your_32_character_encryption_key

# JWT 토큰 비밀키
JWT_SECRET_KEY=your_jwt_secret_key

# =============================================================================
# 개발/테스트 설정
# =============================================================================

# 테스트 모드 (API 호출 시뮬레이션)
TEST_MODE=false

# 개발 모드 (상세 로깅)
DEV_MODE=false

# 샘플 데이터 사용
USE_SAMPLE_DATA=false
